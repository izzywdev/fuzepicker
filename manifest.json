{
  "manifest_version": 3,
  "name": "FuzePicker - AI DOM Element Assistant",
  "version": "1.0.0",
  "description": "Select DOM elements and get AI-powered insights for development",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "FuzePicker"
  },
  "web_accessible_resources": [
    {
      "resources": ["toolbar.html", "sidebar.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 